{
  "name": "@xeokit/core",
  "version": "0.0.1",
  "description": "Core components of the xeokit SDK",
  "main": "dist/core.js",
  "module": "dist/core.modern.js",
  "source": "src/core.ts",
  "types": "dist/core.d.ts",
  "scripts": {
    "dist": "microbundle --format modern,cjs,es --define PACKAGE_VERSION=$npm_package_version",
    "build": "rm -rf dist && cross-env NODE_ENV=production PLUGIN=xkt INPUT=./index.js rollup -c ../../rollup/rollup.core.config.js",
    "publish": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xeokit/xeokit-viewer.git"
  },
  "author": "Lindsay Kay",
    "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/xeokit/xeokit-viewer/issues"
  },
  "homepage": "https://xeokit.io",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "package.json",
    "package-lock.json"
  ],
  "keywords": [
    "webgl",
    "webgpu",
    "javascript",
    "xeokit",
    "xeolabs",
    "creoox",
    "ifc",
    "bcf",
    "bim",
    "gis",
    "cad",
    "openbim",
    "opensource",
    "gltf",
    "3dxml",
    "obj",
    "stl",
    "las",
    "pointcloud",
    "3d-viewer"
  ],

  "dependencies": {
    "strongly-typed-events": "3.0.7"
  }
}
