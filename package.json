{
  "private": true,
  "name": "xeokit-viewer",
  "author": "Lindsay Kay <xeolabs.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xeokit/xeokit-viewer.git"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dist": "lerna run dist",
    "watch": "lerna run watch --parallel --stream",
    "watch:debug": "lerna run watch:debug --parallel --stream",
    "clean:dist": "rm -rf packages/*/dist/**",
    "clean:deps": "rm -rf packages/*/node_modules/**",
    "test": "ts-node node_modules/tape/bin/tape packages/*/test/{*/,}*.test.ts | tap-spec",
    "docs": "typedoc --tsconfig ./tsconfig.json packages/core/src/components.ts packages/core/src/constants.ts packages/core/src/utils.ts packages/math/src/math.ts packages/math/src/matrix.ts packages/math/src/rtc.ts packages/math/src/boundaries.ts packages/math/src/curves.ts packages/math/src/compression.ts packages/math/src/geometry.ts packages/data/src/index.ts  packages/viewer/src/index.ts packages/webgl/src/index.ts  --disableOutputCheck --excludeInternal --excludeNotDocumented --media docs/media --readme ./docs/INDEX.md --includes docs",
    "publish": "npm publish --access public"
  },
  "devDependencies": {
    "@types/command-exists": "1.2.0",
    "@types/ndarray": "1.0.11",
    "@types/node": "18.11.10",
    "@types/node-gzip": "1.1.0",
    "@types/tape": "4.13.2",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "canvas": "2.10.2",
    "concurrently": "7.6.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "lerna": "6.1.0",
    "microbundle": "0.14.2",
    "mikktspace": "1.1.1",
    "nyc": "15.1.0",
    "prettier": "2.8.0",
    "source-map-support": "0.5.21",
    "tap-spec": "5.0.0",
    "tape": "5.6.1",
    "ts-node": "10.9.1",
    "typedoc": "0.21.2",
    "typescript": "4.9.3",
    "http-server": "^14.1.1"
  }
}