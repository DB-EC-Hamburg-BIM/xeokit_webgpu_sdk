{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "skipLibCheck": true, // https://stackoverflow.com/questions/66956030/apache-arrow-does-not-compile-with-typescript
    "target": "ESNext",
    "module": "ESNext",
    "stripInternal": false,
    "typeRoots": ["node_modules/@types"],
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "declaration": true
  },
  "include": [
    "packages/*/src/**/*.ts",
    // Included to allow TypeDoc to find `pages.ts` content.
    "docs/*.ts"
  ],
  "typeRoots": ["node_modules/@types"],
